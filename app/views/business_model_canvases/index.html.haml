%h1 ビジネスモデルキャンバス一覧


= link_to new_business_model_canvase_path, class: 'btn' do
  %i.icon-plus 新規作成

%table.table
  %tr
    %th 名前
    %th 詳細
    %th action

  - @business_model_canvases.each do |business_model_canvase|
    %tr
      %td= business_model_canvase.name
      %td= business_model_canvase.description
      %td
        = link_to business_model_canvase, class: 'btn' do
          %i.icon-list-alt
        = link_to edit_business_model_canvase_path(business_model_canvase), class: 'btn' do
          %i.icon-edit
        = link_to business_model_canvase, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'  do
          %i.icon-remove

%br

